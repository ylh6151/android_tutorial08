<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.a.p02_menolist.MemoActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/ic_launcher"
        />
    <Button
        android:id="@+id/btnTakePhoto"
        android:layout_below="@id/imageView"
        android:text="사진촬영"
        android:layout_width="120dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="24dp"
        android:id="@+id/textViewMemoTitle"
        android:layout_toRightOf="@id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="메모"/>
    <EditText
        android:id="@+id/editMemo"
        android:layout_alignLeft="@id/textViewMemoTitle"
        android:layout_below="@id/textViewMemoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/textViewDate"
        android:layout_marginTop="24dp"
        android:layout_below="@id/editMemo"
        android:layout_alignLeft="@id/textViewMemoTitle"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="날짜"/>
    <EditText
        android:id="@+id/editDate"
        android:layout_alignLeft="@id/textViewDate"
        android:layout_below="@id/textViewDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/btnSave"
        android:text="저장"
        android:textSize="24sp"
        android:layout_marginTop="24dp"
        android:layout_below="@id/editDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
